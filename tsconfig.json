{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es6",
        "noImplicitAny": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "jsEnable": false,
                "alwaysShowRuleFailuresAsWarnings": true,
                "suppressWhileTypeErrorsPresent": false
            }
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
