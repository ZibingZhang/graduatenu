{
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "cd frontend && yarn start",
    "build": "cd frontend && yarn build",
    "test": "jest",
    "eject": "cd frontend && yarn eject",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "husky": "^3.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
